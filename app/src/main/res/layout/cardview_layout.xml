<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:layout_gravity="center_horizontal"
    >

    <android.support.v7.widget.CardView
        android:id="@+id/cardView"
        app:cardElevation="4dp"
        app:cardUseCompatPadding="true"
        app:cardBackgroundColor="#FFE0B2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            >

        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:paddingTop="5dp"
                android:src="@drawable/cheese_sandwich"
                android:id="@+id/imgView"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/imgView"
                android:text="@string/Cheese_Burger"
                android:layout_alignStart="@id/imgView"
                android:textColor="#000"
                android:textStyle="bold"
                android:padding="5dp"
                android:id="@+id/tx_name"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tx_name"
                android:layout_alignStart="@id/imgView"
                android:textColor="#000"
                android:padding="5dp"
                android:text="@string/My40"
                android:id="@+id/tx_price"
                />
        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>